{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@node_modules/*": ["../node_modules/*"],
      "@directives/*": ["app/directives/*"],
      "@services/*": ["app/services/*"],
      "@shared/*": ["app/shared/*"]
    }
  }
}
